<?xml version="1.0" encoding="UTF-8"?><Configuration strict="true">    <Properties>        <Property name="baseDir">target/logs</Property>        <Property name="applicationName">cloudtower</Property>    </Properties>    <Appenders>        <Console name="Console" target="SYSTEM_OUT">            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />        </Console>        <RollingFile name="RollingFile" fileName="${baseDir}/${applicationName}.log"                     filePattern="${baseDir}/$${date:yyyy-MM}/${applicationName}-%d{yyyy-MM-dd}.log.gz">            <PatternLayout pattern="%d %p %c{1.} [%t] %m%n" />            <!-- <CronTriggeringPolicy schedule="15 12 1 0 0 ?"/> -->            <CronTriggeringPolicy schedule="0 0 0 * * ?"/>            <DefaultRolloverStrategy>                <Delete basePath="${baseDir}" maxDepth="2">                    <IfFileName glob="*/${applicationName}-*.log.gz" />                    <IfLastModified age="1d" />                </Delete>            </DefaultRolloverStrategy>        </RollingFile>    </Appenders>    <Loggers>        <Root level="ERROR">            <AppenderRef ref="Console" />            <AppenderRef ref="RollingFile"/>        </Root>    </Loggers></Configuration>