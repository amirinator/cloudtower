<html><#include "./navigation.ftl"><body><script type="application/javascript">    function generateAWSRegions() {        var awsRegionsArray = new Array();        awsRegionsArray[0] =  "us-east-1";        awsRegionsArray[1] =  "us-west-1";        awsRegionsArray[2] =  "us-west-2";        awsRegionsArray[3] =  "eu-west-1";        awsRegionsArray[4] =  "eu-central-1";        awsRegionsArray[5] =  "ap-southeast-1";        awsRegionsArray[6] =  "ap-northeast-1";        awsRegionsArray[7] =  "ap-southwest-2-1";        awsRegionsArray[8] =  "ap-northeast-2";        awsRegionsArray[9] =  "ap-south-1";        awsRegionsArray[10] =  "sa-east-1";        return awsRegionsArray;    }    function generateSelect() {        var divname = "select-container";        var divRegion = "region-select";        var doesRegionSelectExist = document.getElementById(divRegion);        if( !doesRegionSelectExist) {            var newDiv=document.createElement('div');            newDiv.id = divRegion;            var html = '<label class"formLabel"> Region </label><select class="form-label" id="region" name="region">', awsRegions = generateAWSRegions(), i;            for(i = 0; i < awsRegions.length; i++) {                html += "<option value='"+awsRegions[i]+"'>"+awsRegions[i]+"</option>";            }            html += '</select>';            newDiv.innerHTML= html;            document.getElementById(divname).appendChild(newDiv);        }    }    function removeSelect() {        var divRegion = "region-select";        var doesRegionSelectExist = document.getElementById(divRegion);        if( doesRegionSelectExist ) {            var formGroup = document.getElementById("select-container");            var selectDropDown = document.getElementById("region-select");            formGroup.removeChild(selectDropDown);        }    }    function isServiceForRegion() {        var service_type = document.getElementById("usage_type").value;        if( service_type.toLowerCase() == "ec2" ||            service_type.toLowerCase() == "dynamodb" ||            service_type.toLowerCase() == "ecs" ||            service_type.toLowerCase() == "elasticache" ||            service_type.toLowerCase() == "rds" ) {            return generateSelect();        } else {            return removeSelect();        }    }    function validateForm() {        var max_allowed = document.getElementById("max_allowed").value;        if(max_allowed == null || max_allowed == "") {            alert("Please fill out a Service Limit value");            return false;        } else if (!isNumeric(max_allowed)) {            alert("Please use a numeric value");            return false;        } else {            var form = document.admin_form;            var region = document.getElementById("region").value;            if(region) {                form.action = "/admin/usage/update/" + region;            } else {                form.action = "/admin/usage/update/srvc";            }            return true;        }    }    function isNumeric( obj ){        return !isNaN( parseFloat(obj) ) && isFinite( obj )    }</script><h2>Admin</h2><table>    <form id="admin_form" method="post" name="admin_form" action="/admin/usage/update/srvc" onsubmit="return validateForm()">        <div class="form-group" id="form-group">            <label class"form-label"> Account </label>            <select class="form-label" name="account">            <#list accounts as id , name >                <option value='${id}'>${name}</option>            </#list>            </select>            <label class"form-label"> Service Type </label>            <select class="form-label" id="usage_type" name="usage_type" onchange="return isServiceForRegion()">            <#list usages_types as usage>                <option value='${(usage!" ")}' <#if usage == default_usage> selected = "selected"</#if> >${usage}</option>            </#list>            </select>            <div id="select-container"></div>            <label class"formLabel"> Service Limit </label>            <input id="max_allowed" name="max_allowed" type="text" maxlength="10"/>            <input type="Submit" value="Submit" />        </div>    </form></table></body></html>