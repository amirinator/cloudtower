#--- Base imageFROM java:8#--- VolumesVOLUME /tmp# --- Use America/Los_Angeles timezone for containersRUN ln -snf /usr/share/zoneinfo/America/Los_Angeles /etc/localtime && echo 'America/Los_Angeles' > /etc/timezone#--- Create dirsRUN mkdir -p /opt/ec/services/@app.name@#--- Dummy command to invalidate cacheRUN echo "@timestamp@"#--- Copy binary, runtime property files and startup scriptCOPY @app.name@-@app.version@.jar /opt/ec/services/@app.name@/COPY *.runtime.properties /opt/ec/services/@app.name@/COPY httpd.sh /opt/ec/services/@app.name@/RUN chmod +x /opt/ec/services/@app.name@/httpd.sh#--- Run appENTRYPOINT ["/opt/ec/services/@app.name@/httpd.sh"]